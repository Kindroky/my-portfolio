---
import { getCollection } from 'astro:content';

// Layout import — provides basic page elements: <head>, <nav>, <footer> etc.
import BaseLayout from '../layouts/BaseLayout.astro';

// Component Imports
import CallToAction from '../components/CallToAction.astro';
import Grid from '../components/Grid.astro';
import Hero from '../components/Hero.astro';
import Icon from '../components/Icon.astro';
import Pill from '../components/Pill.astro';
import PortfolioPreview from '../components/PortfolioPreview.astro';

// Page section components
import ContactCTA from '../components/ContactCTA.astro';
import Skills from '../components/Skills.astro';

// Content Fetching: List four most recent work projects
const projects = (await getCollection('work'))
	.sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf())
	.slice(0, 4);

// Full Astro Component Syntax:
// https://docs.astro.build/basics/astro-components/
---

<BaseLayout>
	<div class="stack gap-20 lg:gap-48">
		<div class="wrapper stack gap-8 lg:gap-20">
			<header class="hero">
				<Hero
					title="Athénaïs Klapczynski"
					align="start"
				>
					<div class="roles">
						<Pill><Icon icon="code" size="1.33em" /> Developer</Pill>
						<Pill><Icon icon="trophy" size="1.33em" /> Sportswoman</Pill>
						<Pill><Icon icon="palette" size="1.33em" /> Artist</Pill>
						<Pill><Icon icon="pencil-line" size="1.33em" /> Writer</Pill>
					</div>
				</Hero>
				<div class="image-wrapper">
					<div class="image-card">
						<div class="image-front">
							<p>I am a Full Stack Developer who is currently based in Rouen, France.</p>
						</div>
						<div class="image-back">
							<img src="/assets/profpic.png" alt="Athénaïs" />
							<div class="image-overlay"></div>
						</div>
					</div>
				</div>				
			</header>

			<Skills />
		</div>

		<main class="wrapper stack gap-20 lg:gap-48">
			<section class="section with-background with-cta">
				<header class="section-header stack gap-2 lg:gap-4">
					<h3>Selected Work</h3>
					<p style="color: rgba(253, 194, 203, 0.918);">
						Take a look below at some of my projects.
					</p>
				</header>

				<div class="gallery">
					<Grid variant="offset">
						{
							projects.map((project) => (
								<li>
									<PortfolioPreview project={project} />
								</li>
							))
						}
					</Grid>
				</div>

				<div class="cta">
					<CallToAction href="/work/">
						View All
						<Icon icon="arrow-right" size="1.2em"/>
					</CallToAction>
				</div>
			</section>

			<section class="section with-background bg-variant stats-section">
				<header class="section-header">
					<div class="section-header-top">
					  <h3>Stats</h3>
					  <br>
					</div>
					<p>Here are some highlights of my journey and achievements so far.</p>
				  </header>
			  
				  <!-- General Info -->
				  <div class="stat-group">
					<h4>General Info</h4>
					<div class="stats-grid">
					  <div class="stat">
						<span class="stat-number">19</span>
						<span class="stat-label">Years survived on Earth</span>
					  </div>
					  <div class="stat">
						<span class="stat-number">4</span>
						<span class="stat-label">Languages Spoken</span>
					  </div>
					  <div class="stat">
						<span class="stat-number">6</span>
						<span class="stat-label">Years leading teams</span>
					  </div>
					</div>
				  </div>
			  
				  <!-- Programming Achievements -->
				  <div class="stat-group">
					<h4>Programming</h4>
					<div class="stats-grid">
					  <div class="stat">
						<span class="stat-number">8+</span>
						<span class="stat-label">Projects Built</span>
					  </div>
					  <div class="stat">
						<span class="stat-number">5</span>
						<span class="stat-label">Languages Used</span>
					  </div>
					  <div class="stat">
						<span class="stat-number">9+</span>
						<span class="stat-label">Months since I started coding</span>
					  </div>
					</div>
				  </div>
			  
				  <!-- Sports & Discipline -->
				  <div class="stat-group">
					<h4>(e) Sports</h4>
					<div class="stats-grid">
					  <div class="stat">
						<span class="stat-number">5+</span>
						<span class="stat-label">Years of Elite Gymnastics</span>
					  </div>
					  <div class="stat">
						<span class="stat-number">7</span>
						<span class="stat-label">Months of Boxing in Canada</span>
					  </div>
					  <div class="stat">
						<span class="stat-number">2</span>
						<span class="stat-label">Years of LoL</span>
					  </div>
					</div>
				  </div>
			  
				  <!-- Random Facts -->
				  <div class="stat-group">
					<h4>Random Facts</h4>
					<div class="stats-grid">
					  <div class="stat">
						<span class="stat-number">6</span>
						<span class="stat-label">Plants owned</span>
					  </div>
					  <div class="stat">
						<span class="stat-number">27</span>
						<span class="stat-label">Tabs Always Open</span>
					  </div>
					  <div class="stat">
						<span class="stat-number">100%</span>
						<span class="stat-label">Commitment to my passions</span>
					  </div>
					</div>
				  </div>
			  </section>			  
		</main>

		<ContactCTA />
	</div>
</BaseLayout>

<style>
	
	.h4{
		text-align: center;
	}

	.hero {
		position: relative;
		font-size: 5rem;
		text-align: center;
	}
	
	.roles {
		display: flex;
		flex-wrap: wrap;
		justify-content: center;
		gap: 0.5rem;
		margin-top: 0.5rem;
	}
	
	.image-wrapper {
		position: relative;
		width: 100%;
		max-width: 320px;
		aspect-ratio: 9/8;
		margin-inline: auto;
		perspective: 1200px;
	}
	
	.image-card {
		width: 100%;
		height: 100%;
		transform-style: preserve-3d;
		transition: transform 0.8s ease;
	}
	
	.image-front,
	.image-back {
		position: absolute;
		width: 100%;
		height: 100%;
		border-radius: 2rem;
		backface-visibility: hidden;
		overflow: hidden;
	}
	
	.image-front {
		background: rgba(1, 4, 34, 0.212);
		border: 2px solid rgba(253, 194, 203, 0.7);
		box-shadow: 0 0 20px rgba(253, 194, 203, 0.5);
		color: rgba(253, 194, 203, 0.918);
		font-size: 1.2rem;
		font-weight: 600;
		display: flex;
		align-items: center;
		justify-content: center;
		text-align: center;
		padding: 1.5rem;
	}
	
	.image-back {
		transform: rotateY(180deg);
	}
	
	.image-wrapper:hover .image-card {
		transform: rotateY(180deg);
	}
	
	.image-overlay {
		position: absolute;
		inset: 0;
		border-radius: 2rem;
		background: linear-gradient(180deg, rgba(251, 120, 255, 0.144), rgba(85, 15, 102, 0.171));
		z-index: 2;
		pointer-events: none;
		height: 100%;
	}
	
	/* ===== Sections ===== */
	
	.section {
		display: flex;
		flex-direction: column;
		gap: 3rem;
	}
	
	.section-header {
		justify-self: center;
		text-align: center;
		max-width: 50ch;
		font-size: var(--text-md);
		color: rgba(253, 194, 203, 0.918);
	}
	
	.section-header h3 {
		font-size: 1.75rem;
	}
	
	.stats-grid {
		display: grid;
		grid-template-columns: 1fr;
		gap: 3rem;
		justify-items: center;
		margin-top: 2rem;
	}
	
	.stat {
		display: flex;
		flex-direction: column;
		align-items: center;
	}
	
	.stat-number {
		font-size: 2rem;
		font-weight: bold;
		color: var(--gray-0);
	}
	
	.stat-label {
		font-size: 1.1rem;
		color: rgba(253, 194, 203, 0.918);
		margin-top: 0.5rem;
		text-align: center;
		padding-inline: 1rem;
	}
	
	.stat-group h4 {
		text-align: center;
		color: rgba(253, 194, 203, 0.918);
	}

	.gallery {
		padding-inline: 1rem;
	}
	
	.cta {
		justify-self: center;
		margin-top: 1rem;
		text-align: center;
	}
	
	.pill {
		font-size: 0.85rem;
		padding: 0.4rem 0.75rem;
	}
	
	.mention-card {
		display: flex;
		height: 7rem;
		justify-content: center;
		align-items: center;
		text-align: center;
		border: 1px solid var(--gray-800);
		border-radius: 1.5rem;
		color: rgba(253, 194, 203, 0.918);
		background: var(--gray-600);
		box-shadow: var(--shadow-sm);
	}
	
	/* ========== DESKTOP VERSION (min-width: 50em) ========== */
	@media (min-width: 50em) {
		.hero {
			display: grid;
			grid-template-columns: 6fr 4fr;
			padding-inline: 2.5rem;
			gap: 3.75rem;
			text-align: left;
		}
	
		.roles {
			justify-content: flex-start;
		}
	
		.image-wrapper {
			max-width: 360px;
		}
	
		.image-front,
		.image-back,
		.image-overlay {
			border-radius: 4.5rem;
		}
	
		.section {
			display: grid;
			grid-template-columns: repeat(4, 1fr);
			grid-template-areas: 'header header header header' 'gallery gallery gallery gallery';
			gap: 5rem;
		}
	
		.section.with-cta {
			grid-template-areas: 'header header header cta' 'gallery gallery gallery gallery';
		}
	
		.section-header {
			grid-area: header;
			font-size: var(--text-lg);
		}
	
		.section-header h3 {
			font-size: var(--text-4xl);
		}
	
		.with-cta .section-header {
			justify-self: flex-start;
			text-align: left;
		}
	
		.gallery {
			grid-area: gallery;
		}
	
		.cta {
			grid-area: cta;
		}
	
		.mention-card {
			height: 9.5rem;
		}
	}
	
</style>
	
