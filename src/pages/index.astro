---
import { getCollection } from 'astro:content';

// Layout import — provides basic page elements: <head>, <nav>, <footer> etc.
import BaseLayout from '../layouts/BaseLayout.astro';

// Component Imports
import CallToAction from '../components/CallToAction.astro';
import Grid from '../components/Grid.astro';
import Hero from '../components/Hero.astro';
import Icon from '../components/Icon.astro';
import Pill from '../components/Pill.astro';
import PortfolioPreview from '../components/PortfolioPreview.astro';

// Page section components
import ContactCTA from '../components/ContactCTA.astro';
import Skills from '../components/Skills.astro';

// Content Fetching: List four most recent work projects
const projects = (await getCollection('work'))
	.sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf())
	.slice(0, 4);

// Full Astro Component Syntax:
// https://docs.astro.build/basics/astro-components/
---

<BaseLayout>
	<div class="stack gap-20 lg:gap-48">
		<div class="wrapper stack gap-8 lg:gap-20">
			<header class="hero">
				<Hero
					title="Athénaïs Klapczynski"
					tagline="I am a Full Stack Developer who is currently based in Rouen, France."
					align="start"
				>
					<div class="roles">
						<Pill><Icon icon="code" size="1.33em" /> Developer</Pill>
						<Pill><Icon icon="trophy" size="1.33em" /> Sportswoman</Pill>
						<Pill><Icon icon="palette" size="1.33em" /> Artist</Pill>
						<Pill><Icon icon="pencil-line" size="1.33em" /> Writer</Pill>
					</div>
				</Hero>
				<div class="image-wrapper">
					<img src="/assets/profpic.png" alt="Athénaïs" />
					<div class="image-overlay"></div>
				</div>
			</header>

			<Skills />
		</div>

		<main class="wrapper stack gap-20 lg:gap-48">
			<section class="section with-background with-cta">
				<header class="section-header stack gap-2 lg:gap-4">
					<h3>Selected Work</h3>
					<p style="color: rgba(253, 194, 203, 0.918);">
						Take a look below at some of my projects.
					</p>
				</header>

				<div class="gallery">
					<Grid variant="offset">
						{
							projects.map((project) => (
								<li>
									<PortfolioPreview project={project} />
								</li>
							))
						}
					</Grid>
				</div>

				<div class="cta">
					<CallToAction href="/work/">
						View All
						<Icon icon="arrow-right" size="1.2em"/>
					</CallToAction>
				</div>
			</section>

			<section class="section with-background bg-variant stats-section">
				<header class="section-header">
					<div class="section-header-top">
					  <h3>Stats</h3>
					  <br>
					</div>
					<p>Here are some highlights of my journey and achievements so far.</p>
				  </header>
			  
				  <!-- General Info -->
				  <div class="stat-group">
					<h4>General Info</h4>
					<div class="stats-grid">
					  <div class="stat">
						<span class="stat-number">19</span>
						<span class="stat-label">Years survived on Earth</span>
					  </div>
					  <div class="stat">
						<span class="stat-number">2</span>
						<span class="stat-label">Nationalities</span>
					  </div>
					  <div class="stat">
						<span class="stat-number">4</span>
						<span class="stat-label">Languages Spoken</span>
					  </div>
					</div>
				  </div>
			  
				  <!-- Programming Achievements -->
				  <div class="stat-group">
					<h4>Programming</h4>
					<div class="stats-grid">
					  <div class="stat">
						<span class="stat-number">8+</span>
						<span class="stat-label">Projects Built</span>
					  </div>
					  <div class="stat">
						<span class="stat-number">5</span>
						<span class="stat-label">Languages Used</span>
					  </div>
					  <div class="stat">
						<span class="stat-number">9+</span>
						<span class="stat-label">Months since I started coding</span>
					  </div>
					</div>
				  </div>
			  
				  <!-- Sports & Discipline -->
				  <div class="stat-group">
					<h4>(e) Sports</h4>
					<div class="stats-grid">
					  <div class="stat">
						<span class="stat-number">5+</span>
						<span class="stat-label">Years of Elite Gymnastics</span>
					  </div>
					  <div class="stat">
						<span class="stat-number">7</span>
						<span class="stat-label">Months of Boxing in Canada</span>
					  </div>
					  <div class="stat">
						<span class="stat-number">2</span>
						<span class="stat-label">Years of LoL</span>
					  </div>
					</div>
				  </div>
			  
				  <!-- Random Facts -->
				  <div class="stat-group">
					<h4>Random Facts</h4>
					<div class="stats-grid">
					  <div class="stat">
						<span class="stat-number">∞</span>
						<span class="stat-label">Ideas per Minute</span>
					  </div>
					  <div class="stat">
						<span class="stat-number">27</span>
						<span class="stat-label">Tabs Always Open</span>
					  </div>
					  <div class="stat">
						<span class="stat-number">100%</span>
						<span class="stat-label">Commitment to my passions</span>
					  </div>
					</div>
				  </div>
			  </section>			  
		</main>

		<ContactCTA />
	</div>
</BaseLayout>

<style>
	.hero {
		position: relative;
	}

	.roles {
		display: none;
	}

	.image-wrapper {
	position: relative;
	width: 360px;
	height: 400px;
	border-radius: 1.5rem;
	overflow: hidden;
}

	.image-wrapper img {
		width: 100%;
		height: 85%;
		object-fit: cover;
		object-position: top;
		border-radius: 1.5rem;
		box-shadow: var(--shadow-md);
		display: block;
		margin-bottom: 30px;
	}
	
	.image-overlay {
		position: absolute;
		inset: 0;
		border-radius: 4.5rem;
		background: linear-gradient(180deg, rgba(251, 120, 255, 0.11), rgba(85, 15, 102, 0.171));
		z-index: 2;
		pointer-events: none;
		height: 85%;
	}

	.stats-section {
		grid-template-columns: 1fr;
		text-align: center;
	}

	.stats-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
		gap: 3rem;
		justify-items: center;
		margin-top: 2rem;
	}

	.stat {
		display: flex;
		flex-direction: column;
		align-items: center;
	}

	.stat-number {
		font-size: 3rem;
		font-weight: bold;
		color: var(--gray-0);
	}

	.stat-label {
		font-size: 18px;
		color: rgba(253, 194, 203, 0.918);
		margin-top: 0.5rem;
	}

	.centered-cta {
		margin-top: 2rem;
		display: flex;
		justify-content: center;   /* horizontally center */
		align-items: center;       /* vertically center (if container allows) */
	}

	@media (min-width: 50em) {
		.hero {
			display: grid;
			grid-template-columns: 6fr 4fr;
			padding-inline: 2.5rem;
			gap: 3.75rem;
		}

		.roles {
			margin-top: 0.5rem;
			display: flex;
			gap: 0.5rem;
		}

		.hero img {
			aspect-ratio: 3 / 4;
			border-radius: 4.5rem;
			object-fit: cover;
		}
	}

	/* ====================================================== */

	.section {
		display: grid;
		gap: 2rem;
	}

	.with-background {
		position: relative;
	}

	.with-background::before {
		--hero-bg: var(--bg-image-subtle-2);

		content: '';
		position: absolute;
		pointer-events: none;
		left: 50%;
		width: 100vw;
		aspect-ratio: calc(2.25 / var(--bg-scale));
		top: 0;
		transform: translateY(-75%) translateX(-50%);
		background:
			url('/assets/backgrounds/noise.png') top center/220px repeat,
			var(--hero-bg) center center / var(--bg-gradient-size) no-repeat,
			var(--gray-999);
		background-blend-mode: overlay, normal, normal, normal;
		mix-blend-mode: var(--bg-blend-mode);
		z-index: -1;
	}

	.with-background.bg-variant::before {
		--hero-bg: var(--bg-image-subtle-1);
	}

	.section-header {
		justify-self: center;
		text-align: center;
		max-width: 50ch;
		font-size: var(--text-md);
		color: rgba(253, 194, 203, 0.918);
	}

	.section-header h3 {
		font-size: var(--text-2xl);
	}

	@media (max-width: 768px) {
	/* ===== General Layout Fixes ===== */
	.section {
		display: flex;
		flex-direction: column;
		gap: 3rem;
	}

	.gallery {
		padding-inline: 1rem;
	}

	.cta {
		justify-self: center;
		margin-top: 1rem;
		text-align: center;
	}

	.section-header h3 {
		font-size: 1.75rem;
	}

	.roles {
		display: flex;
		flex-wrap: wrap;
		justify-content: center;
		gap: 0.5rem;
	}

	.image-wrapper {
		width: 100%;
		max-width: 320px;
		height: auto;
		margin-inline: auto;
	}

	.image-wrapper img,
	.image-overlay {
		height: auto;
		border-radius: 2rem;
	}


	/* ===== Stats Section ===== */
	.stats-grid {
		grid-template-columns: 1fr;
	}

	.stat-number {
		font-size: 2rem;
	}

	.stat-label {
		font-size: 1rem;
		text-align: center;
		padding-inline: 1rem;
	}


	/* ===== SKILLS SECTION ===== */
	.skills-box {
		padding: 2rem 1.25rem;
	}

	.grid-box {
		display: flex;
		flex-direction: column;
		gap: 2rem;
	}

	.grid-section h2 {
		font-size: 1.25rem;
	}

	.pill-grid {
		display: flex;
		flex-wrap: wrap;
		gap: 0.5rem;
	}

	.pill {
		font-size: 0.85rem;
		padding: 0.4rem 0.75rem;
	}

	/* Optional: if you're using trait cards in a separate grid */
	.traits-grid {
		display: flex;
		flex-direction: column;
		gap: 1.5rem;
		padding-inline: 1.25rem;
	}
}


</style>
