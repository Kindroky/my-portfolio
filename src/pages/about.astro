	align-items: center;
	gap: 5rem;
}

.roles {
	display: flex;
	justify-content: center;
	flex-wrap: wrap;
	gap: 1rem;
	margin-top: 2rem;
	margin-bottom: 3rem;
}

.about-container {
	width: 100%;
	max-width: 75rem;
	padding-inline: 2rem;
	margin-inline: auto;
	display: flex;
	flex-direction: column;
	gap: 5rem;
}

.content-block h2 {
	font-size: var(--text-4xl);
	margin-bottom: 1.5rem;
	color: var(--gray-100);
	text-align: center;
}

.content-block p,
.content-block ul {
	font-size: var(--text-md);
	color: var(--gray-200);
	line-height: 1.75;
	text-align: center;
}

.content-block ul {
	list-style: none;
	padding: 0;
}

.content-block ul li {
	margin-bottom: 1rem;
}
</style>
