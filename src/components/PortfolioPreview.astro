---
import type { CollectionEntry } from 'astro:content';

interface Props {
	project: CollectionEntry<'work'>;
}

const { data, id } = Astro.props.project;
---

<a class="card" href={`/work/${id}`}>
	<img src={data.img} alt={data.img_alt || ''} loading="lazy" decoding="async" />
	<div class="title-bar">
		<span class="title">{data.title}</span>
	</div>
</a>

<style>
	.card {
		position: relative;
		display: grid;
		grid-template: 1fr / 1fr;
		height: 11rem;
		border: 1px solid var(--gray-800);
		border-radius: 0.75rem;
		overflow: hidden;
		box-shadow: var(--shadow-sm);
		text-decoration: none;
		font-weight: 800;
		transition: box-shadow var(--theme-transition), transform 0.5s ease;
	}

	img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		object-position: center center; /* Add this */
	}

	.title-bar {
		grid-area: 1 / 1;
		width: 100%;
		background: rgba(71, 13, 126, 0.63);
		display: flex;
		justify-content: center;
		padding: 0.5rem 0;
		z-index: 2;
	}

	.title {
		color: rgba(217, 194, 248, 0.938);
		font-size: 1.2rem;
		transition: font-size 0.3s ease, transform 0.3s ease;
		text-align: center;
	}	

	.card::before {
		content: '';
		position: absolute;
		top: -50%;
		left: -50%;
		width: 200%;
		height: 200%;
		background: linear-gradient(
			0deg, 
			transparent, 
			transparent 30%, 
			rgba(155, 120, 219, 0.733)
		);
		transform: rotate(-45deg);
		transition: all 0.5s ease;
		opacity: 0;
		pointer-events: none;
		z-index: 1;
	}

	.card:hover {
		box-shadow: 0 0 40px rgba(0,255,255,0.5);
		transform: scale(1.05);
	}

	.card:hover::before {
		opacity: 1;
		transform: rotate(-45deg) translateY(100%);
	}

	.card:hover .title {
		font-size: 2rem;
		transform: translateY(-2px);
	}

	@media (min-width: 50em) {
		.card {
			height: 22rem;
			border-radius: 1.5rem;
		}
	}
</style>
